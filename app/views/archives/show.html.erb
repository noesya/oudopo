<%= content_for :title, @archive %>

<div class="row">
  <div class="col-lg-7">
    <%= simple_format @archive.description %>
  </div>
  <div class="offset-lg-1 col-lg-4">
    <label class="form-label">Organisation</label>
    <p><%= link_to @archive.organisation, direct_organisation_path(@archive.organisation) %></p>

    <label class="form-label">Items</label>
    <p><%= @archive.items.count %></p>

    <% if @archive.url.present? %>
      <label class="form-label">Url</label>
      <p><%= link_to @archive.url, @archive.url, target: :_blank %></p>
    <% end %>

    <%= link_to 'AccÃ©der aux secrets', secret_archive_path(@archive), class: 'btn btn-primary mb-1'  if can? :secret, @archive %>

    <% if can? :edit, @archive %>
      <div>
        <%= link_to "Modifier", edit_archive_path(@archive), class: 'btn btn-primary mb-1' %>
        <%= button_to "Supprimer", @archive, method: :delete, class: 'btn btn-danger', data: { confirm: 'Confimer la suppression ?' }  %>
      </div>
    <% end %>
  </div>
</div>

<%
@items = @archive.items.ordered.page(params[:page])
%>
<%= render 'items/list', items: @items %>
<%= paginate @items %>


