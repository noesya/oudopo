<%= content_for :title, 'Archives' %>

<div class="row">
  <% @archives.each do |archive| %>
    <div class="col-lg-3">
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title h5">
            <%= link_to archive, 
                        direct_archive_path(organisation_slug: archive.organisation.slug, archive_slug: archive.slug), 
                        class: 'stretched-link' %>
          </h2>
          <p class="mb-0"><%= archive.organisation %>, <%= archive.items.count %> items</p>
        </div>
      </div>
    </div>
  <% end %>
</div>

