<header class="pt-0 pt-lg-5 pb-5">
  <div class="container">
    <nav class="navbar navbar-expand-lg flex-column-reverse flex-lg-row flex-mb-5 align-items-start " aria-label="Navigation">
      <%= link_to root_path do %>
        <%= image_tag 'logo.svg', width: 250 %>
      <% end %>
      <div class="ms-auto text-end">
        <button class="navbar-toggler border-0 pe-0 mb-5 mb-lg-0" 
                type="button" 
                data-bs-toggle="collapse" 
                data-bs-target="#navbar" 
                aria-controls="navbar" 
                aria-expanded="false" 
                aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse pb-5" id="navbar">
          <%= render_navigation %>
        </div>
      </div>
    </nav>

    <h1 class="my-5 pt-5"><%= yield :title %></h1>
  </div>
</header>